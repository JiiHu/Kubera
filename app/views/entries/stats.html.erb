<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

<div class="col-md-12">
	<h1>Statistics</h1>
</div>

<div class="col-md-4">
	<h3>Total outcome</h3>
	<%= render 'total_table', categories: @total_stats['outcome'], total: @total_stats['total']['outcome'] %>
	<%= pie_chart @total_stats['outcome'] %>
</div>

<div class="col-md-4">
	<h3>Total income</h3>
	<%= render 'total_table', categories: @total_stats['income'], total: @total_stats['total']['income'] %>
	<%= pie_chart @total_stats['income'] %>
</div>

<div class="col-md-12">
	<h3>Data by month</h3>
	<%= line_chart @lines_income %>
</div>
