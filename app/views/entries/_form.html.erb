<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name, selected: @entry.category_id), {}, { class:"form-control" } %>
  </div>
  <div class="actions">
    <%= f.submit action_name, class:"btn btn-success btn-new" %>
  </div>
<% end %>
