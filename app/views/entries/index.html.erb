<p id="notice"><%= notice %></p>

<h1>Listing Entries</h1>

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Date</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.amount %></td>
        <td><%= entry.date %></td>
        <td><%= entry.user %></td>
        <td><%= link_to entry.category, entry.category, class:"anchor" %></td>
        <td><%= link_to 'Show', entry, class:"anchor" %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry), class:"btn btn-primary btn-new" %></td>
        <td><%= link_to 'Destroy', entry, class:"btn btn-danger btn-new", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path, class:"btn btn-new btn-success" %>
