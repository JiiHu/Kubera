<% else %>
  <nav class="navbar navbar-fixed-top">
<% end %>
    <div class="navbar-header text-right">

      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <% if current_page?(root_url) && current_user.nil? %>
        <%= link_to image_tag("kubera-light.png", :alt => "like", :class => "logo"), root_path, class: 'navbar-brand' %>
      <% else %>
        <%= link_to image_tag("kubera.png", :alt => "like", :class => "logo"), root_path, class: 'navbar-brand' %>
      <% end %>
    </div>
    <div class="collapse navbar-collapse pull-right">
