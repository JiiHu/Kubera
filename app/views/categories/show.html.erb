
<h1><%= @category.name %></h1>

<h4>
  <% if @category.income %>
    Income
  <% else %>
    Outcome
  <% end %>
</h4>

<%= link_to 'Edit', edit_category_path(@category), class:"btn btn-primary btn-new" %>

<h3><small>Average amount in this category</small>
<%= @average %> &euro;</h3>

<h2>Entries in this category</h2>

<table class="table">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.amount %></td>
        <td><%= entry.date %></td>
        <td><%= entry.user %></td>
        <td><%= link_to 'Show', entry, class:"anchor" %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry), class:"btn btn-primary btn-new" %></td>
        <td><%= link_to 'Destroy', entry, class:"btn btn-danger btn-new", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>